# ==============================================================
# STAGING ENVIRONMENT CONFIGURATION
# ==============================================================

# Node Environment
NODE_ENV=staging
LOG_LEVEL=info

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=appdb_staging
POSTGRES_USER=appuser
POSTGRES_PASSWORD=change_me

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_me
REDIS_DB=1

# API Configuration
PORT=3000
API_PREFIX=/api
BACKEND_URL=https://staging-api.yourdomain.com

# JWT Configuration
JWT_SECRET=staging_secret_change_me
JWT_EXPIRATION=24h

# Evolution WhatsApp API
EVOLUTION_API_URL=http://evolution-api:8080
EVOLUTION_LICENSE_KEY=staging_license_key

# Ollama LLM Models
OLLAMA_API_URL=http://ollama:11434
OLLAMA_HOST=0.0.0.0:11434

# Timezone
TZ=America/Sao_Paulo

# CORS
CORS_ORIGIN=https://staging.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Feature Flags
FEATURE_AUDIO_PROCESSING=true
FEATURE_PAYMENT_SYSTEM=true
FEATURE_VENDOR_MODE=true
